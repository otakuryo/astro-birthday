---
import Layout from "@layouts/Layout.astro";
import Card from "@components/Card.astro";
import Modal from "@components/Modal.astro";

class DiscClass {
	imgSrc: string;
	year: string;
	title: string;
	audioSrc: string;

	constructor( imgSrc:string, year:string, title:string, audioSrc: string) {
		this.imgSrc = imgSrc;
		this.year = year;
		this.title = title;
		this.audioSrc = audioSrc;
	}
}

const discs: Array<DiscClass> = [
	new DiscClass("img/albert_1_vinilo.jpg", "Disco 1", "??", "sounds/sonido-1.mp3"),
	new DiscClass("img/alberto_1_vinilo.jpg", "Disco 2", "??", "sounds/sonido-2.mp3"),
	new DiscClass("img/aline_1_vinilo.jpg", "Disco 3", "??", "sounds/sonido-3.mp3"),
	new DiscClass("img/carolina_1_vinilo.jpg", "Disco 4", "??", "sounds/sonido-4.mp3"),
	new DiscClass("img/javi_1_vinilo.jpg", "Disco 4", "??", "sounds/sonido-2.mp3"),
]
---

<Layout>
	<h1 class="w-100 text-center my-3" style="height: 10rem;">
		<img src="img/feliz-cumpleanyos.png" alt="feliz cumpleaÃ±os" class="h-full w-full m-auto object-contain"/>
	</h1>

	<div class="flex flex-wrap gap-2 justify-center">
		{
			discs.map( (disc) => (
				<Card discImgSrc={disc.imgSrc} discYear={disc.year} discTitle={disc.title} discAudioSrc={disc.audioSrc}></Card>
			))
		}
	</div>

	<div class="hidden text-sm text-gray-400">
		<ul>
			<li>Music from #Uppbeat (free for Creators!):</li>
			<li>https://uppbeat.io/t/pryces/music-is</li>
			<li>License code: YY1BSGYEXEYZSFXS</li>
		</ul>
	</div>

</Layout>