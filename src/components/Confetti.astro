<canvas id="canvas" class="h-full w-screen absolute"></canvas>

<!-- Confetti -->
<script src="https://cdn.jsdelivr.net/npm/confetti-js@0.0.18/dist/index.min.js" is:raw></script>
<script type="text/javascript" is:inline>
    document.addEventListener('DOMContentLoaded', () => {
    let targetEl = document.getElementById('canvas');

    var confettiEl = {
        "target": targetEl,
        "max": "50",
        "size": "2",
        "animate": true,
        "props": [
            "line",
            {
                "type": "svg",
                "src": "img/fasting-v1.svg",
                "size": 25,
                "weight": 0.3
            }
        ],
        "colors": [
            [169,130,30],
            [171,119,17],
            [146,111,13],
            [162,121,44]
        ],
        "clock": "60",
        "rotate": false,
        "start_from_edge": false,
        "respawn": true
    };
    
    var canvas1 = new ConfettiGenerator(confettiEl);
    canvas1.render();
    })
</script>